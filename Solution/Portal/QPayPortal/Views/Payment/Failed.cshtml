@{
    ViewData["Title"] = "Failed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Square card -->
<style>
    .demo-card-square.mdl-card {
        width: 400px;
        height: 440px;
    }

    .demo-card-square > .mdl-card__title {
        color: #black;
        background: url('/images/PaymentFailed.png') center right 50% no-repeat #fff;
    }
</style>

<div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
    </div>
    <div class="mdl-card__supporting-text">
        Er is iets fout gegaan, probeer het aub nog eens.
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a asp-action="ToHome" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Terug
        </a>
    </div>
</div>