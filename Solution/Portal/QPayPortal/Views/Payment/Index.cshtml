@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Wide card with share menu button -->
<style>
    .demo-card-wide.mdl-card {
        width: 512px;
    }

    .demo-card-wide > .mdl-card__title {
        color: black;
        height: 176px;
    }

    .demo-card-wide > .mdl-card__menu {
        color: #fff;
    }
</style>

<div class="demo-card-wide mdl-card mdl-shadow--2dp UserTransactionContainer">
    <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Opwaarderen</h2>
    </div>
    <div class="mdl-card__supporting-text">
        U heeft de keuze om 'offline' op te waarderen of u kunt opwaarderen door een
        externe betaalprovider.
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a asp-action="Offline" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Offline
        </a>
            <a asp-action="ExternalIndex" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                Extern
            </a>
    </div>
</div>