
@{
    ViewData["Title"] = "ExternalPaymentComplete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Square card -->
<style>
    .demo-card-square.mdl-card {
        width: 400px;
        height: 440px;
    }

    .demo-card-square > .mdl-card__title {
        color: #black;
        background: url('/images/PaymentOK.png') center right 50% no-repeat #fff;
    }
</style>

<div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
    </div>
    <div class="mdl-card__supporting-text">
        Uw betaling met @ViewData["PaymentProvider"] is gelukt !
    </div>
    <div class="mdl-card__supporting-text">
        Transactie Id: 
        @ViewData["TransactionId"]
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a asp-action="ToHome" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Terug naar mijn kaart
        </a>
    </div>
</div>