@using System
@using Microsoft.AspNetCore.Rewrite.Internal.UrlActions

@{
    ViewData["Title"] = "Nieuwe gebruiker";
}
<html>
<body>
<!-- Wide card with share menu button -->
<style>
    .demo-card-wide > .mdl-card__title {
        color: #fff;
        height: 250px;
        background: url('/images/background_NewUserCard_QPAY.png') center / cover;
    }
</style>

<div class="demo-card-wide mdl-card mdl-shadow--2dp" style="padding: 10px; margin: auto; width: 40%">
    <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Welcome</h2>
    </div>
    <div class="mdl-card__supporting-text">
        Als u uw toegangskaart koppelt aan uw QNH account staat u toe dat uw aankopen worden opgeslagen.
        Dit is nodig om inzicht te krijgen in het aantal mensen dat gebruik maakt
        van de lunch en hoeveel frisdrank er gekocht wordt.
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-area="" asp-controller="NewUser" asp-action="SelectCard">Ik begrijp het en ik wil doorgaan</a>
    </div>
    <div class="mdl-card__menu">
        <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" onclick="@Url.Action("index","Home")">
            <i class="material-icons">share</i>
        </button>
    </div>
</div>
</body>
</html>
