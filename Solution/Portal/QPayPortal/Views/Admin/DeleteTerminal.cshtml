@model Portal.Business.Models.Terminal

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<body>
<div class="demo-card-wide mdl-card mdl-shadow--2dp UserTransactionContainer" style="width: auto; height: 100px">
    <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text" style="color: black; text-align: center">Weet u het zeker?</h2>
    </div>
    <div>
        <dl class="dl-horizontal"style="text-align: center">
            <dt>
                @Html.DisplayNameFor(model => model.TerminalId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TerminalId)
            </dd>
        </dl>

        <form asp-action="DeleteTerminal">
            <input type="hidden" asp-for="TerminalId" />
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-action="Index">Terug</a>
            <input type="submit" value="Verwijderen" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" />
        </form>
    </div>
</div>
</body>
</html>