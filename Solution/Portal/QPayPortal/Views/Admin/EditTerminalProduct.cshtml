@model QPayPortal.Controllers.AdminController.TestProductModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string terminalId = ViewData["Terminal"].ToString();
    string terminalDescription = ViewData["TerminalDescription"].ToString();
}
<html>
<body>
    <div class="mdl-shadow--2dp UserTransactionContainer" style="width: auto; height: 250px; background-color: white">
        <div class="mdl-card__title mdl-card--expand">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="EditTerminalProduct">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label>Terminal id: @terminalId</label>
                            <br />
                            <br />
                            <label style="color: black">Omschrijving: @terminalDescription</label>
                            <h5>Selecteer een product</h5>
                            <div class="mdl-selectfield mdl-js-selectfield">
                                <select asp-for="ProductCode" asp-items="@Model.ProductList" class="mdl-selectfield__select" id="idp" name="productId"></select>
                                <label class="mdl-selectfield__label" for="product1">Producten</label>
                            </div>
                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <div class="form-group">
                                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-action="Index">Terug</a>
                                <input type="submit" value="Save" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>