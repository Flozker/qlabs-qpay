@model Portal.Business.Models.Terminal

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<body>
<div class="demo-card-wide mdl-card mdl-shadow--2dp UserTransactionContainer" style="width: auto; height: 250px">
        <div class="mdl-card__title mdl-card--expand">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="CreateTerminal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TerminalId" class="control-label"></label>
                        <input class="mdl-textfield__input" type="text" asp-for="TerminalId">
                        <span asp-validation-for="TerminalId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                            <label asp-for="TerminalDescription" class="control-label"></label>
                            <input class="mdl-textfield__input" type="text" asp-for="TerminalDescription">
                            <span asp-validation-for="TerminalDescription" class="text-danger"></span>
                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <div class="form-group">
                                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-action="Index">Terug</a>
                                <input type="submit" value="Save" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" />
                            </div>
                        </div>
                    </form>
                </div>
                </div>
            </div>
        </div>
</body>
</html>