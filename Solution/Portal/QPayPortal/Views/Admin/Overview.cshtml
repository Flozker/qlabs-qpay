@using QPayPortal.Controllers
@{
    var income = ViewData["TotalIncome"] as AdminController.OverviewIncome;
}

<html>
<body>
<div class="demo-card-wide mdl-card mdl-shadow--2dp UserTransactionContainer">
<div class="mdl-card__title" style="margin-top: -20%">
    <h2 class="mdl-card__title-text" style="color: black">Overzicht betalingen</h2>
</div>
<div id="UserDetails" style="width: 100%; height: 100%; float: left">
    <ul class="userInfo-list-item mdl-list">
        <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
                <i class="material-icons mdl-list__item-icon">verified_user</i>
                Betaald deze maand : &#8364 @income.IncomeThisMonth
            </span>
        </li>
        <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
                <i class="material-icons mdl-list__item-icon">warning</i>
                Bedrag openstaande betalingen: &#8364 @income.TotalOpenTransactions
            </span>
        </li>
        <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
                Betaald totaal: &#8364 @income.IncomeTotal
            </span>
        </li>
    </ul>
</div>
</div>
</body>
</html>