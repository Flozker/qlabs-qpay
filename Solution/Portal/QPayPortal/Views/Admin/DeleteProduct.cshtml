@model Portal.Business.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<body>
    <div class="demo-card-wide mdl-card mdl-shadow--2dp UserTransactionContainer" style="width: auto; height: 250px">
        <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text" style="color:black">Weet u het zeker?</h2>
        </div>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductDescription)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductPrice)
                </dd>
            </dl>

            <form asp-action="DeleteProduct">
                <input type="hidden" asp-for="ProductId" />
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-action="Index">Terug</a>
                <input type="submit" value="Verwijderen" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" />
            </form>
        </div>
    </div>
</body>
</html>