@model Portal.Business.Models.Employee

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<body>
    <div class="demo-card-wide mdl-card mdl-shadow--2dp UserTransactionContainer" style="width: auto">
    <div class="mdl-card__title mdl-card--expand">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="EditUser">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Email" />
                    <div class="form-group">
                        <label asp-for="CardUid" class="control-label" style="color: black"></label>
                        <input class="mdl-textfield__input" type="text" asp-for="CardUid" style="color: black">
                        <span asp-validation-for="CardUid" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Balance" class="control-label" style="color: black"></label>
                        <input class="mdl-textfield__input" type="text" asp-for="Balance" style="color: black">
                        <span asp-validation-for="Balance" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label style="color: black">
                                <input asp-for="Admin" /> @Html.DisplayNameFor(model => model.Admin)
                            </label>
                        </div>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <div class="form-group">
                            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-action="Index">Terug</a>
                            <input type="submit" value="Save" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</body>
</html>